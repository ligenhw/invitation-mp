/* pages/chat/index.wxss */
page {
    background-color: hsla(0, 100%, 50%, 0.425);
    padding-bottom: 150rpx;
}
.chat_container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
} 
.chat_list {
    width: 630rpx;
    margin: 0 auto;
    margin-top: 30rpx;
    padding: 30rpx;
    min-height: 0;
    overflow: hidden;
    background-color: rgba(255,255,255,.9);
    border-radius: 5px;
    box-shadow:  0 0 20px rgba(190,77,43,.2);
}
.chat_face {
    width: 100rpx;
    height: 100rpx;
    float: left;
    margin-right: 30rpx;
}
.chat_face image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}
.chat_words {
    width: 500rpx;
    float: left;
    font-size: 30rpx;
    line-height: 50rpx;
    color: #999;
}
.chat_meta {
    width: 100%;
    min-height: 0;
    overflow: hidden;
    margin-bottom: 10rpx;
}
.chat_user {
    display: inline-block;
    font-size: 30rpx;
    font-weight: 600;
    color: #666;
    float: left;
}
.chat_date {
    display: inline-block;
    font-size: 24rpx;
    color: #ccc;
    float: right;
}

.send_msg {
    width: 700rpx;
    padding: 25rpx;  
    background-color: #fff;
    min-height: 0;
    overflow: hidden;
    position: fixed;
    bottom: 0;
    left: 0;
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;

}
.send_ipt {
    width: 500rpx;
    padding: 10rpx;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    float: left;
    background-color: #f5f5f5;
    border-radius: 5px;
}
.send_btn {
    width: 150rpx;
    height: 80rpx;
    font-size: 36rpx;
    line-height: 80rpx;
    float: right;
    background: #E8515B!important;
}
.send_btn::after{
  border: none;
}
.befirst {
    width: 600rpx;
    height: 450rpx;
    margin: 0 auto;
    min-height: 0;
    overflow: hidden;
    margin-top: 200rpx;
}
.befirst image{
    width: 600rpx;
    height: 450rpx;
}



.title {
    text-align: center;
    font-size: 30rpx;
    line-height: 60rpx;
  }
  .friends {
    min-height: 0;
    overflow: hidden;
    width: 600rpx;
    margin: 0 auto;
    margin-top: 20rpx;

    display: flex;
    align-items: center;
  }

  .bless-text {
    margin: 20rpx;
  }

  .face {
    width: 100rpx;
    height: 100rpx;
    float: left;
    margin: 10rpx;
  }
  .face image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
  }
  .btn_zone {
    padding: 30rpx 50rpx;
    min-height: 0;
    overflow: hidden;
    margin-top: 20rpx;
  }
  .zan {
    width: 400rpx;
  }
  .share {
    width: 200rpx;
  }
  .bless_img {
    width: 400rpx;
    height: 300rpx;
    margin: 0 auto;
  }
  
  .bless_img image{
    width: 400rpx;
    height: 300rpx;
  }
  .tips {
    text-align: center;
    font-size: 25rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    color: #ccc;
  }
  .bless-btn{
    background: #E8515B!important;
  }
  .bless-btn::after{
    border: none;
  }
  .share-btn{
    background: #fff!important;
  }
  .share-btn::after{
    border: 1rpx solid #ffe6e2;
  }